@model CalculoApp.Models.CalculoModel

@{
    ViewData["Title"] = "Calculo de Caída y Número Aleatorio";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<link rel="stylesheet" href="~/css/style.css" />

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Calcular" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="Dato" class="font-weight-bold">Ingrese el dato:</label>
            <input type="number" asp-for="Dato" class="form-control" />
            <span asp-validation-for="Dato" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Calcular</button>
    </form>

    @if (Model != null && Model.NumeroAleatorio > 0)
    {
        <div class="resultado">
            <h3>Resultado:</h3>
            <p>Número Aleatorio.@Model.NumeroAleatorio</p>
            <p>Caída del Dato.@Model.Caida</p>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


